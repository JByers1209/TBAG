<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tbag.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GameServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tbag.servlet.GameServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MultiplyNumbersServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tbag.servlet.MultiplyNumbersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GuessingGameServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tbag.servlet.GuessingGameServlet</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tbag.servlet.LoginServlet</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>PauseServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tbag.servlet.PauseServlet</servlet-class>
  </servlet>
  
  <!-- AJAX servlets. -->
  <servlet>
    <servlet-name>GameAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tbag.servlet.ajax.GameAjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MultiplyNumbersAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tbag.servlet.ajax.MultiplyNumbersAjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tbag.servlet.ajax.NextGuessAjaxServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GameServlet</servlet-name>
    <url-pattern>/game</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MultiplyNumbersServlet</servlet-name>
    <url-pattern>/multiplyNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GuessingGameServlet</servlet-name>
    <url-pattern>/guessingGame</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PauseServlet</servlet-name>
    <url-pattern>/pause</url-pattern>
  </servlet-mapping>
  
  <!--  AJAX servlet mappings. -->
  <servlet-mapping>
    <servlet-name>GameAjaxServlet</servlet-name>
    <url-pattern>/ajax/game</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MultiplyNumbersAjaxServlet</servlet-name>
    <url-pattern>/ajax/multiplyNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <url-pattern>/ajax/nextGuess</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
